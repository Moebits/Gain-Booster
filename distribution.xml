<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
  <title>Gain Plugin Installer</title>
  <options customize="allow" allow-external-scripts="no"/>
  <choices-outline>
    <line choice="vst3"/>
    <line choice="au"/>
    <line choice="standalone"/>
  </choices-outline>

  <choice id="vst3" title="VST3 Plugin">
    <pkg-ref id="com.moebytes.gain.vst3"/>
  </choice>

  <choice id="au" title="AudioUnit Plugin">
    <pkg-ref id="com.moebytes.gain.au"/>
  </choice>

  <choice id="standalone" title="Standalone Application">
    <pkg-ref id="com.moebytes.gain.standalone"/>
  </choice>

  <pkg-ref id="com.moebytes.gain.vst3" version="0.0.1" auth="root">Gain Plugin_VST3.pkg</pkg-ref>
  <pkg-ref id="com.moebytes.gain.au" version="0.0.1" auth="root">Gain Plugin_AU.pkg</pkg-ref>
  <pkg-ref id="com.moebytes.gain.standalone" version="0.0.1" auth="root">Gain Plugin_Standalone.pkg</pkg-ref>
</installer-gui-script>